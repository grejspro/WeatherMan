# Ignore bundler config and local config files
/.bundle
/config/database.yml
/config/master.key

# Ignore system and IDE-specific files
.DS_Store
.idea/
.vscode/
*.swp
*~
.project
.classpath
.c9/

# Ignore all log files, error files, and temporary files
/log/*
!/log/.keep
/tmp
!/tmp/.keep
/storage/*
!/storage/.keep

# Ignore pid files, keeping the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore file containing environment variables
.env
.env.*

# Ignore the default SQLite database (if you have a previous one)
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore the byte-compiled cache files
*.pyc
__pycache__/

# Ignore node modules and Yarn error logs
/node_modules
yarn-debug.log
.yarn
.yarn-cache

# Ignore the webpacker and Sprockets compiled output
/public/packs
/public/packs-test
/public/assets

# Ignore master key for decrypting credentials and more
/config/credentials.yml.enc
/config/credentials/* 

# Ignore the database schema cache file
/db/schema_cache.yml
/db/schema_cache.dump

# Ignore local configuration
.local_env.yml

# Ignore the database configuration if it's sensitive
/config/database.yml

# Ignore public/system which may contain uploaded files and assets
/public/system

# Ignore coverage reports
/coverage
/vendor/bundle

# Optional: Ignore the config file for foreman
.env.local

# Ignore Byebug command history file.
.byebug_history

# Ignore folder with IDE settings
.vscode/
.idea/

/app/assets/builds/*
!/app/assets/builds/.keep
